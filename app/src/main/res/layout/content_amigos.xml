<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.blancasoto.gpswarning_bm.AmigosActivity"
    tools:showIn="@layout/activity_amigos"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_todosAmigos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_todosAmigos"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_todosAmigos"></ListView>

</LinearLayout>
